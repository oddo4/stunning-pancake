<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Rest.Pages;assembly=Rest"
             x:Class="Rest.MainPage">
    <NavigationPage Title="Home" Icon="ic_action_home.png">
        <x:Arguments>
            <local:HomePage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Search" Icon="ic_action_search.png">
        <x:Arguments>
            <local:SearchPage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Categories" Icon="ic_action_categories.png">
        <x:Arguments>
            <local:CategoryPage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Favorites" Icon="ic_action_favorites.png">
        <x:Arguments>
            <local:FavoritePage/>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>